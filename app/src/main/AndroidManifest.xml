    <application

        android:label="@string/app_name"
        android:theme="@style/AppTheme">


        <activity android:name=".MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <receiver android:name="com.soellner.gpstracker.BootCompletedIntentReceiver">
            <intent-filter>

                <action android:name="android.intent.action.BOOT_COMPLETED" />

            </intent-filter>

        </receiver>


        <service android:enabled="true" android:name="com.soellner.gpstracker.GPSTrackerService" />
    </application>

</manifest>